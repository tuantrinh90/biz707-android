<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDialog"
    android:gravity="center"
    android:padding="@dimen/padding_dialog">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_layout">

            <com.bon.customview.textview.ExtTextView
                android:id="@+id/tvRecordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_layout"
                android:textAlignment="center"
                tool:text="Phần ghi âm ..... bị tạm dừng" />

            <com.bon.customview.button.ExtButton
                android:id="@+id/btnContinue"
                style="@style/btnDialogConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginRight="@dimen/padding_layout"
                android:layout_marginTop="@dimen/margin_dialog"
                android:text="@string/continue_2" />

            <com.bon.customview.button.ExtButton
                android:id="@+id/btnSave"
                style="@style/btnDialogConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginRight="@dimen/padding_layout"
                android:layout_marginTop="@dimen/padding_layout"
                android:text="@string/save" />

            <com.bon.customview.button.ExtButton
                android:id="@+id/btnCancel"
                style="@style/btnDialogCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/padding_layout"
                android:layout_marginLeft="@dimen/padding_layout"
                android:layout_marginTop="@dimen/padding_layout"
                android:textColor="@color/colorDarkOrange" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

