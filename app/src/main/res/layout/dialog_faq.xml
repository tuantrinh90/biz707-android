<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bon.customview.textview.ExtTextView
                android:id="@+id/txtNameFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_content"
                android:ems="1000"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_title"
                app:textViewFontAssetName="@string/font_regular" />

            <com.bon.customview.textview.ExtTextView
                android:id="@+id/txtContentFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="1000"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/text_medium"
                app:textViewFontAssetName="@string/font_regular" />

            <com.bon.customview.button.ExtButton
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_layout"
                android:background="@drawable/bg_btn_nagative"
                android:text="@string/close"
                android:textColor="@color/colorWhite"
                app:buttonFontAssetName="@string/font_bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>