<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mc.customizes.searchbar.SearchBar
        android:id="@+id/edtQRCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_content"
        android:layout_marginLeft="@dimen/margin_layout"
        android:layout_marginRight="@dimen/margin_layout"
        app:hideLeftIcon="true"
        app:searchBarHint="@string/barcode"
        app:textSize="14" />

    <FrameLayout
        android:id="@+id/flScanQR"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>