<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_layout"
    android:layout_marginRight="@dimen/margin_dialog"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_avatar_sub_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivChatLeftArrow"
                android:layout_width="@dimen/icon_arrow_width"
                android:layout_height="@dimen/icon_arrow_height"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/padding_content"
                android:background="@drawable/chat_left_arrow_sub_1" />

            <LinearLayout
                android:id="@+id/llChatLeftLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/chat_left_layout_sub_1"
                android:padding="@dimen/padding_content">

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/tvChatContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_medium"
                    app:textViewFontAssetName="@string/font_regular"
                    tools:text="vllvlvlvlvlv\na\n\v\n\v" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>