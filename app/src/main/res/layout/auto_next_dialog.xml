<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_dialog">

    <com.bon.customview.textview.ExtTextView
        android:id="@+id/tvSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_super_3x_large"
        app:textViewFontAssetName="@string/font_bold" />

    <com.bon.customview.textview.ExtTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_layout"
        android:text="@string/auto_next_content"
        android:textAlignment="center"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_medium"
        app:textViewFontAssetName="@string/font_regular" />

    <com.bon.customview.button.ExtButton
        android:id="@+id/btnClose"
        style="@style/btnDialogConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/margin_dialog"
        android:layout_marginTop="@dimen/margin_dialog"
        android:layout_marginRight="@dimen/margin_dialog"
        android:text="@string/stay_this" />


</LinearLayout>