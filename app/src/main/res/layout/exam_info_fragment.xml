<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_layout"
                android:background="@drawable/bg_yellow"
                android:orientation="vertical"
                android:padding="@dimen/margin_content">

                <com.bon.customview.textview.ExtTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/introduce"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_title"
                    app:textViewFontAssetName="@string/font_bold" />

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/txtIntroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_medium"
                    app:textViewFontAssetName="@string/font_regular"
                    tool:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since... the ... 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum." />

                <com.bon.customview.textview.ExtTextView
                    android:id="@+id/txtReadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_content"
                    android:text="@string/show_more"
                    android:textColor="@color/colorDarkBlue"
                    android:textSize="@dimen/text_medium"
                    android:visibility="gone"
                    app:textViewFontAssetName="@string/font_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_layout"
                android:background="@drawable/bg_yellow"
                android:orientation="vertical"
                android:padding="@dimen/margin_content">

                <com.bon.customview.textview.ExtTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_information"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_title"
                    app:textViewFontAssetName="@string/font_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_content"
                    android:orientation="horizontal">

                    <com.bon.customview.textview.ExtTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_content"
                        android:text="@string/class_exam"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular" />

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/txtClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular"
                        tool:text="10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_content"
                    android:orientation="horizontal">

                    <com.bon.customview.textview.ExtTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_content"
                        android:text="@string/subjects"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular" />

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/txtSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular"
                        tool:text="Tiếng Anh" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_content"
                    android:orientation="horizontal">

                    <com.bon.customview.textview.ExtTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_content"
                        android:text="@string/level"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular" />

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/txtLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular"
                        tool:text="Trung bình" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_content"
                    android:orientation="horizontal">

                    <com.bon.customview.textview.ExtTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_content"
                        android:text="@string/times"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular" />

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular"
                        tool:text="90 phút" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_content"
                    android:orientation="horizontal">

                    <com.bon.customview.textview.ExtTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_content"
                        android:text="@string/number_of_exams"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular" />

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/txtNumOffExam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular"
                        tool:text="5/10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_content"
                    android:orientation="horizontal">

                    <com.bon.customview.textview.ExtTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_content"
                        android:text="@string/number_of_questions"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular" />

                    <com.bon.customview.textview.ExtTextView
                        android:id="@+id/txtNumOffQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrange"
                        android:textSize="@dimen/text_content"
                        app:textViewFontAssetName="@string/font_regular"
                        tool:text="50 câu" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_layout"
                android:background="@drawable/bg_yellow"
                android:orientation="vertical"
                android:padding="@dimen/margin_content">

                <com.bon.customview.textview.ExtTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_content"
                    android:text="@string/history"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_title"
                    app:textViewFontAssetName="@string/font_bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDivider" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tool:listItem="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since... the ... 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum." />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.bon.customview.button.ExtButton
                    android:id="@+id/btn_Exam"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/padding_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:background="@drawable/bg_btn_nagative"
                    android:text="@string/exam"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_title"
                    app:textViewFontAssetName="@string/font_bold" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>